{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "angular-extensions": {
      "projectType": "library",
      "root": "projects/angular-extensions",
      "sourceRoot": "projects/angular-extensions/src",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/angular-extensions/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/angular-extensions/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/angular-extensions/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/angular-extensions/**/*.ts",
              "projects/angular-extensions/**/*.html"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "angular-extensions"
}
